{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./bin",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["bin/**/*"],
  "exclude": ["node_modules", "dist"]
}